<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bc3">

    <!-- CardView para agrupar los campos principales del cómic -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campo para el título del cómic -->
            <EditText
                android:id="@+id/etComicTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título del Cómic"
                android:inputType="text" />

            <!-- Campo para el autor -->
            <EditText
                android:id="@+id/etComicAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor"
                android:inputType="text" />

            <!-- Campo de localización -->
            <EditText
                android:id="@+id/etComicLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Localización"
                android:inputType="text" />

            <!-- Spinner de condición -->
            <Spinner
                android:id="@+id/spinnerComicCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Spinner de género -->
            <Spinner
                android:id="@+id/spinnerComicGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Campo de precio -->
            <EditText
                android:id="@+id/etComicPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:inputType="numberDecimal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para subir la imagen -->
    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Imagen"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <!-- ImageView para mostrar la imagen del cómic -->
    <ImageView
        android:id="@+id/ivComicImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/hb2"
        android:scaleType="centerCrop" />

    <!-- Botón para guardar el cómic -->
    <Button
        android:id="@+id/btnSaveComic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Cómic"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>
</LinearLayout>
