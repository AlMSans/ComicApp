<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema general basado en Material3 sin ActionBar -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color de fondo general -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Color de status bar y navegaciÃ³n -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Activar decoraciones modernas -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Personalizaciones globales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <!-- Tema sin ActionBar (si necesitas uno separado) -->
    <style name="NoActionBarTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Estilo para BottomNavigationView -->
    <style name="CustomBottomNavStyle">
        <item name="android:background">@color/nav_background</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="CircularImageStyle">
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>



</resources>
